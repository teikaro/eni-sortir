{% extends 'base.html.twig' %}

{% block title %}Campus index{% endblock %}

{% block body %}
    {% include'admin/inc/_navAdmin.html.twig' %}

    <h1>Liste des Campus</h1>

    <table class="table">
        <thead>
        <tr>

            <th>NOM</th>
            <th>ACTIONS</th>
        </tr>
        </thead>
        <tbody>
        {% for campus in campuses %}
            <tr>
                <td>{{ campus.nom }}</td>
                <td>
                    <a href="{{ path('app_campus_edit', {'id': campus.id}) }}">Modifier</a>
                    <a href="{{ path('app_campus_delete', {'id': campus.id}) }}"
                       onclick=" return confirm('Voulez vous supprimer le campus');">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">pas de campus trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_campus_new') }}">Créer un nouveau Campus</a>
{% endblock %}
