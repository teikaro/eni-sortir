{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}Utilisateurs
{% endblock %}

{% block body %}

    {% include'admin/inc/_navAdmin.html.twig' %}

    <h3>Utilisateur Non - Actif</h3>
    <a href="{{ path('admin_gerer_utilisateur') }}">Utilisateur Actif</a>

    <table>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>E-mail</th>
            <th>Telephone</th>
            <th>Campus</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
        {% for utilisateurActif in utilisateursActif %}
            <tr>
                <td>{{ utilisateurActif.nom }}</td>
                <td>{{ utilisateurActif.prenom }}</td>
                <td>{{ utilisateurActif.email }}</td>
                <td>{{ utilisateurActif.telephone }}</td>
                <td>{{ utilisateurActif.campus.nom }}</td>
                <td>{{ utilisateurActif.roles|join('') }}</td>
                <td><a href="{{ path('admin_activer_utilisateur', {'id':utilisateurActif.id}) }}"
                       onclick="return confirm('Voulez vous activer l\'utilisateur ?');">Activer</a>
                    <a href="{{ path('admin_supprimer_utilisateur', {'id':utilisateurActif.id}) }}"
                       onclick="return confirm('Voulez vous supprimer l\'utilisateur ?');">Supprimer</a></td>
            </tr>
        {% endfor %}
    </table>
    <a href="#">Cr√©er un Utilisateur</a>

{% endblock %}